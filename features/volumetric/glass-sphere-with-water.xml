    <integrator type="volumePathtracer" depth="100">
        <scene id="scene">
            <camera type="perspective" id="camera">
                <integer name="width" value="512"/>
                <integer name="height" value="512"/>

                <string name="fovAxis" value="x"/>
                <float name="fov" value="30"/>

                <transform>
                    <rotate axis="1,0,0" angle="-2.5"/>
                    <translate z="-6" x="1"/>
                </transform>
            </camera>

            <light type="envmap">
                <texture type="image" filename="textures/kloofendal_overcast_1k.hdr" exposure="1"/>
                <transform>
                    <rotate axis="0,1,0" angle="-50"/>
                </transform>
            </light>

            
            <instance>
                <shape type="rectangle"/>
                <bsdf type="diffuse">
                    <texture name="albedo" type="constant" value="1"/>
                </bsdf>
                <transform>
                    <scale value="1"/>
                    <translate z="4"/>
                </transform>
            </instance>

            <instance>
                <shape type="sphere"/>
                <bsdf type="dielectric">
                    <texture name="ior" type="constant" value="1.4"/>
                    <texture name="reflectance" type="constant" value="1"/>
                    <texture name="transmittance" type="constant" value="1"/>
                </bsdf>
                <medium type="homogeneous" sigmaT="0.5" color="0.2,0.6,0.8"/>
                <transform>
                    <translate x="0.0" y="0"/>
                </transform>
            </instance> 
            <instance>
                <shape type="rectangle"/>
                <bsdf type="diffuse">
                    <texture name="albedo" type="constant" value="0.3"/>
                </bsdf>
                <transform>
                    <rotate axis="1,0,0" angle="90"/>
                    <scale value="10"/>
                    <translate y="1"/>
                </transform>
            </instance>

            <instance>
                <shape type="sphere"/>
                <emission type="lambertian">
                    <texture name="emission" type="constant" value="15"/>
                </emission>
                <transform>
                    <scale value="2"/>
                    <translate x="-4" y="-2" z="1"/>
                </transform>
            </instance>
        </scene>
        <image id="glass-sphere-with-water"/>  
        <sampler type="independent" count="400"/>
    </integrator>
